<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.shoppingmall.mapper.ProductDescriptionMapper">

  <!-- 상품 이미지 조회 -->
  <select id="findByProductId" resultType="ProductDescription" parameterType="Long">
    SELECT * FROM product_description WHERE product_id = #{productId} order by sequence
  </select>

</mapper>