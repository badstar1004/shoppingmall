<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.shoppingmall.mapper.ProductOptionMapper">

  <!-- 사이즈 조회 (중복제거) -->
  <select id="findDistinctSizeByProductId" resultType="org.example.shoppingmall.domain.productOption.model.ProductOptionSizeDto" parameterType="Long">
    SELECT DISTINCT
           option_size
      FROM product_option
     WHERE product_id = #{productId}
  </select>

  <!-- 색상 조회 (중복제거) -->
  <select id="findDistinctColorByProductId" resultType="org.example.shoppingmall.domain.productOption.model.ProductOptionColorDto" parameterType="Long">
    SELECT DISTINCT
           option_color
         , rgb_value
      FROM product_option
     WHERE product_id = #{productId}
  </select>

</mapper>